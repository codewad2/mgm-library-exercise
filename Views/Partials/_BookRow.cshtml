@using project.Models;
@model Book;

<tr class="book-row" data-book-id="@Model.Id">
    <td>@Html.DisplayFor(modelItem => Model.Name)</td>
    <td>@Html.DisplayFor(modelItem => Model.Author)</td>
    <td>@Html.DisplayFor(modelItem => Model.Year)</td>
    <td>
        @if (Model.Checkout == null)
        {
            <span>Available</span>
        }
        else
        {
            <span>@Html.DisplayFor(modelItem => Model.Checkout.Member.Name)</span>
        }
    </td>
</tr>
